# Discord Bot Configuration
# Copy this file to .env and fill in your values

# ============================================
# DISCORD SETTINGS (Required)
# ============================================

# Your Discord bot token (from Discord Developer Portal)
DISCORD_TOKEN=your_bot_token_here

# Your Discord application/client ID
CLIENT_ID=your_client_id_here

# Guild ID for testing (optional - for guild-specific command deployment)
GUILD_ID=your_guild_id_here

# ============================================
# RANKBOT API SETTINGS (Required)
# ============================================

# URL of your RankBot API server
API_URL=http://localhost:3000

# API key for authentication (must match your RankBot API_KEY)
API_KEY=your_api_key_here

# ============================================
# PERMISSION SETTINGS
# ============================================

# Role IDs that can use ranking commands (comma-separated)
# Leave empty to allow all users with Discord's "Manage Roles" permission
ALLOWED_ROLE_IDS=

# Role IDs that can use admin commands like /config (comma-separated)
ADMIN_ROLE_IDS=

# ============================================
# OPTIONAL SETTINGS
# ============================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable command cooldowns (seconds) - 0 to disable
COMMAND_COOLDOWN=3

# Channel ID for logging ranking actions (optional)
LOG_CHANNEL_ID=

# Color for embed messages (hex without #)
EMBED_COLOR=5865F2
